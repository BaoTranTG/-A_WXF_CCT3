
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5 mt-5 my-5">
    <div class="card w-75">
        <div class="card-header bg-info">
            <strong>Đăng Nhập</strong>
        </div>
        <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
        @using (Html.BeginForm())
        {
@Html.ValidationSummary(true)
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Tài khoản</label>
                            @Html.TextBox("username", "", new { @class = "form-control", @minlength = 0, @maxlength = 50, @placeholder = "Tên đăng nhập" })
                            <p style="color:red">@ViewData["Loi1"]</p>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
                            @Html.Password("password", "", new { @class = "form-control", @minlength = 0, @maxlength = 50, @placeholder = "Mật khẩu" })
                            <p style="color:red">@ViewData["Loi2"]</p>
                        </div>
                    </form>
                    <input class="btn btn-primary " type="submit" value="Đăng Nhập" />
                </div>}
    </div>
</div>

