@model DoAnWebFilm.Models.PHIMSAPCHIEU
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "AdminPhimSapChieu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal m-4">
        <h2 class="text-danger">Sửa Phim Sắp Chiếu</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_PHIMSP)

        <div class="form-group">
            <div class="col-md-10">
                <h5>TÊN PHIM SẮP CHIẾU: </h5>
                @Html.EditorFor(model => model.TEN_PHIMSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TEN_PHIMSP, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">
                <h5>HÌNH PHIM SẮP CHIẾU: </h5>
                <input type="file" name="fileUpload" class="form-control" />
                @Html.ValidationMessageFor(model => model.IMAGE_PHIMSP, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">
                <h5>LINK PHIM SẮP CHIẾU: </h5>
                @Html.EditorFor(model => model.LINK_PHIMSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LINK_PHIMSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </div>  
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}

