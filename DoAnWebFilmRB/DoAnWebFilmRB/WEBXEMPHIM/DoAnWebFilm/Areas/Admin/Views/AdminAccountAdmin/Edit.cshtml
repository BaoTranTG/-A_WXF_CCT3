@model DoAnWebFilm.Models.ADMINFILM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal m-4">
        <h2 class="text-danger">Sửa Account Admin</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_ADMIN)

        <div class="form-group">
            <div class="col-md-10">
                <h5>TÊN ADMIN: </h5>
                @Html.EditorFor(model => model.TEN_ADMIN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TEN_ADMIN, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">
                <h5>MK ADMIN: </h5>
                @Html.EditorFor(model => model.MK_ADMIN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MK_ADMIN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </div>  
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}

