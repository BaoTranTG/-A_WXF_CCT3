

@using PagedList.Mvc;
@using DoAnWebFilm.Models
@model PagedList.PagedList<PHIM>
@{ ViewBag.Title = "Search";
                Layout = "~/Views/Shared/_Layout.cshtml"; }
<section>
    <div class="container-md">
        <div class="row gx-2">
            <div class="col-12 col-lg-9 pt-1">
                <i class="fas fa-video fa-2x "> <h4 class="d-inline ">TÌM KIẾM PHIM</h4></i>
                <hr/>
                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-3 row-cols-lg-4 gy-3 gx-2 g-gl-0 pb-3 ">

                    @foreach (var searchfilm in Model)
                    {
        <div class="col">

            <a href="@Url.Action("Details","Home", new { id= searchfilm.ID_PHIM} )" style="text-decoration:none">

                <div class="card bg-dark text-white">
                    <img src="~/PosterFilm/@searchfilm.IMAGE_PHIM" class="card-img" alt="...">
                    <div class="card-img-overlay">
                        <p class="card-title d-inline px-1 rounded bg-danger">Full HD</p>

                    </div>
                    <div class="card-header">
                        <p>@searchfilm.TEN_PHIM</p>
                    </div>
                </div>
            </a>
        </div>}
                </div>
                @Html.PagedListPager(Model, page => Url.Action("filmInYear", new { page = page }))
            </div>
            <div class="col-12 col-lg-3 d-none d-lg-block ">
                <div class=" p-1">
                    <i class="fas fa-video fa-2x text-light"> <h4 class="d-inline text-light">PHIM SẮP CHIẾU</h4></i>
                    <hr class="text-light"/>
                    <div class="bg-light p-2 rounded ">
                        @Html.Action("phimSapChieu", "PhimSapChieu")
                    </div>
                </div>
                <div class=" p-1">
                    <i class="fas fa-video fa-2x text-light"> <h4 class="d-inline text-light">PHIM HOT</h4></i>
                    <hr class="text-light"/>
                    <div class="bg-light p-2 rounded">
                        @Html.Action("phimHot", "Home")
                    </div>
                </div>
            </div>
        </div>
        <div>
        </div>
    </div>
</section>
<html>
<script type="text/javascript" src="https://itexpress.vn/js/noel.js"></script>
</html>