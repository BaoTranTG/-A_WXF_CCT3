
@model DoAnWebFilm.Models.BINHLUAN

@using (Html.BeginForm("createBinhLuan", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_PHIM)
        @Html.HiddenFor(model => model.ID_TV)

        @Html.EditorFor(model => model.NOIDUNG, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NOIDUNG, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Bình Luận" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

